<div class="container my-5">
  <div class="row">
    <div class="col-md-10 col-sm-12 mx-6 mx-sm-auto px-auto">
      <div class="row d-flex justify-content-center mb-4">

        <h3 class="col-6"><span>コンサート情報編集</span></h3>

        <%= form_with model: @concert, url: public_concert_path(@concert.id), method: :patch, local:true, class: "container text-center pl-9" do |f| %>
        <div class="form-group row">
          <label class="col-4 text-right">コンサート画像</label>
          <%= f.file_field :image, class: "col-4 form-control-file pl-0", accept: "image/*" %>
        </div>
        <div class="form-group row">
          <label class="col-4 text-right">コンサート名</label>
          <%= f.text_field :name, class: "col-4 form-control name", placeholder: "コンサート名" %>
        </div>
        <div class="form-group row">
          <label class="col-4 text-right">コンサート説明</label>
          <%= f.text_area :introduction, class: "col-4 form-control introduction", placeholder: "ここに説明文を記述します" %>
        </div>
        <div class="form-group row">
          <label class="col-4 text-right">カテゴリー</label>
          <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "--選択してください--" %>
        </div>
        <div class="form-group row">
          <label class="col-4 text-right">税抜価格</label>
          <%= f.text_field :price, class: "col-4 form-control price", placeholder: "1000" %>円
        </div>
        <div class="form-group row">
          <label class="col-4 text-right">販売ステータス</label>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", value: "true", class: "mr-5" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "受付終了", value: "false" %>
        </div>
        <div class="form-group text-center mt-5">
          <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
        </div>
        <%end%>
    </div>
  </div>
</div>