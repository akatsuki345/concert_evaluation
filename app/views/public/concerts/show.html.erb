<div class="container" id="item-warpper">
  <div class="row">
    <div class="col-sm-2">
      <%= render 'public/tmp/category_list', categories: @categories %>
    </div>
    <div class="col-md-8"  style="margin-top: 50px;">
      <div class="d-flex" style="margin-left: 50px;">
        <%= image_tag @concert.get_image, size:'300x200' %>
        <div class="ml-4 pl-4">
          <h3 class="font-weight-bold mb-3" style="margin-left: 50px;"><%= @concert.name%></h3>
          <div class="d-flex flex-column justify-content-between h-75">
            <p class="h5 mb-4" style="margin-left: 50px;">
              <%= @concert.introduction %>
            </p>
            <p class="h4 mb-4" style="margin-left: 50px;">
              <%= @concert.add_tax_price.to_s(:delimited) %>（<%= @concert.price.to_s(:delimited) %>）円
              <small>(税込)</small>
            </p>
          </div>
        </div>
      </div>
      <% if @concert.is_active %>
        <% if current_customer %>
        <div class="w-50 mt-4 ml-auto text-right">
          <%= render 'public/tmp/sheet', cart:@cart, concert:@concert %>
        </div>
        <% end %>
      <% else %>
      <div class="text-right">
        <span class="btn btn-sm btn-secondary">受付終了</span>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%# レビュー一覧表示%>
<div class="container my-5">
   <div class="row">
     <div class="col-10">
       <div>
         <%= form_with model: [@concert, @revue], url: public_concert_revues_path(@concert.id), method: :post do |f| %>
          <%= f.text_area :impressions, rows: '5', placeholder: "レビューをここに" %>
          <%= f.submit "送信する" %>
         <% end %>
      </div>
      <h3><span class="bg-light bg-gradient">レビュー一覧</span></h3>
     </div>
<table class='table table-hover table-inverse'>
 <thead>
  <tr class="bg-light">
   <th>ユーザー</th>
   <th>レビュー</th>
   <th>コメント</th>
  </tr>
</thead>
   <tbody>
      <% @revues.each do |r| %>
      <tr>
        <td>
          <%= link_to public_customer_path(r.customer.id) do %>
            <%#= attachment_image_tag(r.customer, :image, :fill, 70, 70,
                format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg") %>
            <%= r.customer.first_name%>
          <% end %>
        </td>
        <td><%= link_to public_concert_revues_path(r.concert, r) do %> <%# @bookでbook_idをrでreview_idを引数として持ってくる%>
          <%= r.impressions %><% end %>
        </td>
        <td><%= link_to "コメント", public_concert_comments_path(concert_id: @concert.id, revue_id: r.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class ="paginate">
    <%= paginate @revues %>
  </div>
 </div>
</div>
