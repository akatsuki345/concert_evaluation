          <li class="mr-3">
            <%= link_to new_customer_registration_path,class: 'nav-link text-white font-weight-bold' do %>
             <i class="fas fa-user-plus"></i><span class="ml-1">新規登録</span>
            <% end %>
          </li>
          <li class="mr-3">
            <%= link_to new_customer_session_path,class: 'nav-link text-white font-weight-bold' do %>
             <i class="fas fa-sign-in-alt"></i><span class="ml-1">ログイン</span>
            <% end %>
          </li>
