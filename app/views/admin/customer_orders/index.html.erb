<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 col-sm-12 mx-auto">
      <div class="row mb-3">
        <div class="col-12">
          <h3><span class="bg-light bg-gradient">注文一覧</span></h3>
        </div>
      </div>
      <div class="row">
        <table class="table table-bordered border-dark">
          <thead class="bg-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to admin_order_path(order.id), class: "text-dark border-bottom border-dark" do %>
                  <%= l(order.created_at) %>
                  <% end %>
                </td>
                <td><%= order.name %></td>
                <td><%= order.order_details.sum(:sheet) %></td>
                <td><%= order.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>