      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li class="mr-3">
            <%= link_to public_customer_path(current_customer), class: 'nav-link text-white font-weight-bold' do %>
              <i class="fa fa-user"></i><span class="ml-1">mypage</span>
            <% end %>
          </li>
          <li class="mr-3">
            <%= link_to public_about_path,class: 'nav-link text-white font-weight-bold' do %>
             <i class="fas fa-link"></i><span class="ml-1">Aboutページ</span>
            <% end %>
          </li>
          <li class="mr-3">
            <%= link_to public_concerts_path,class: 'nav-link text-white font-weight-bold' do %>
             <i class="fa fa-music"></i><span class="ml-1">コンサート一覧</span>
            <% end %>
          </li>
          <li class="mr-3">
            <%= link_to public_cart_items_path,class: 'nav-link text-white font-weight-bold' do %>
             <i class="fa fa-cart-plus"></i><span class="ml-1">カート</span>
            <% end %>
          </li>
          <li class="mr-3">
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-white font-weight-bold' do %>
             <i class="fas fa-sign-out-alt"></i><span class="ml-1">ログアウト</span>
             <% end %>
          </li>

        <% elsif admin_signed_in? %>
          <li class="mr-3">
            <%= link_to "コンサート一覧", admin_concerts_path,class: 'nav-link text-white font-weight-bold' %>
