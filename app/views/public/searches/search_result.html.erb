<h2>Concerts search for "<%= params[:word] %>"</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @concerts.each do |concert| %>
        <tr>
          <td><%= link_to concert.name, public_concert_path(concert.id), class: "card-title mb-2" %></td>
          <td><%= concert.introduction %></td>
        </tr>
      <% end %>
    </tbody>
</table>
