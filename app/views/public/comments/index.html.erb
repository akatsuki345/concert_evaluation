<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h3><span class="bg-light bg-gradient">コメント</span></h3>
    </div>
    <div class="col-12">
      <div class="comments_area">
        <%= render 'public/comments/comment', revue_comments: @revue.comments %>
      </div>
      <%= form_with model: [@revue, @comment], url: public_concert_comments_path(concert_id: @revue.concert_id, revue_id: @revue.id), method: :post, local: false do |f| %>
        <div class="form-floating mb-3">
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control" %>
          <label for="floatingTextarea">コメントをここに</label>
        </div>
        <%= f.submit "送信する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>